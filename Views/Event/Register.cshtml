@using ClubActivitiesSystem.Models.ViewModel
@model GuestRegistrationViewModel

@{
    ViewData["Title"] = "活動報名";
}

<partial name="_FlashMessage" />

<h2>@ViewData["Title"]</h2>

<div class="card">
    <div class="card-body">
        <form asp-action="Register" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="EventId" />

            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Name" class="form-label">姓名</label>
                <input asp-for="Name" class="form-control" placeholder="姓名" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label">電子郵件</label>
                <input asp-for="Email" class="form-control" placeholder="電子郵件" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Phone" class="form-label">電話</label>
                <input asp-for="Phone" class="form-control" placeholder="電話" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">確定報名</button>
                <a asp-action="Details" asp-route-id="@Model.EventId" class="btn btn-outline-secondary">返回活動</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
